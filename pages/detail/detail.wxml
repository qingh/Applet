<view class="wrap">
		<view class="song" wx:if="{{show}}">
				<view class="photo">
						<image wx:if="{{isPlay}}" class="icon" bindtap="stop" src="data:image/svg+xml;utf8;base64,"></image>
						<image wx:else bindtap="play" class="icon" src="data:image/svg+xml;utf8;base64,"></image>
						<image class="img" style="animation-play-state:{{state}}" src="{{data.songPicSmall}}"></image>
				</view>
				<view class="msg">
						<text class="author">演唱：{{data.artistName}}</text>
						<text class="song-name">歌曲：{{data.songName}}</text>
						<text class="album-name">专辑：{{data.albumName}}</text>
				</view>
		</view>
		<view class="exception" wx:else>服务器异常，请稍后再试</view>
</view>